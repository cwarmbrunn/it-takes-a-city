
<%- include('partials/header') -%>

<p> Hello <a href='mailto:<%= locals.userProfile.email %>'><%= locals.userProfile.name %></a>.</p>

<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" placeholder="Title goes here" />
        </div>
        <div>
            <label for="post-data">Post</label>
            <textarea id="post-data" name="post-data" rows="4" placeholder="Blog post goes here"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

<script src="/javascript/add-post.js"></script>

